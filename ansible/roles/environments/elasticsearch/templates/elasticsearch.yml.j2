cluster.name: {{ elasticsearch_cluster_name }}
node.name: {{ ansible_hostname }}
path.data: {% for path in elasticsearch_data_path %}{{ path }}{% if not loop.last %},{% endif %}{% endfor %} ## es的数据目录可一可多,这个位置要根据系统硬盘划分来确定目录 
path.logs: {{ elasticsearch_log_path }}
path.conf: /etc/elasticsearch
bootstrap.memory_lock: true
network.host: 0.0.0.0
discovery.zen.ping.unicast.hosts: [{% for host in groups['elasticsearch'] %}"{{ hostvars[host]['ansible_eth0']['ipv4']['address'] }}"{% if not loop.last %},{% endif %}{% endfor %}] ## 配置集群主节点IP
discovery.zen.minimum_master_nodes: 1
script.painless.regex.enabled: true
script.max_compilations_per_minute: 100

